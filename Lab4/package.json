{
  "name": "internlink",
  "version": "1.0.0",
  "description": "InternLink - Connecting Students with Opportunities",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server.js",
    "server": "cd backend && node server.js",
    "client": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "mongoose": "^8.13.0",
    "vite": "^6.2.3",
    "vitest": "^3.1.1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@vitest/ui": "^3.1.1"
  }
}
